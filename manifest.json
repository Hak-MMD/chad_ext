{
  "manifest_version": 3,
  "name": "ChadAI",
  "version": "1.0",
  "description": "Capture a specific area, process it with AI, and get answers in chat.",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
